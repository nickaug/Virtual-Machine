<Window x:Class="VirtualMachine.CreateFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VM_GUI"
        mc:Ignorable="d"
        Title="Create File" Height="139" Width="377" Icon="/images/logo.png">
	<Grid Margin="0,0,0,5">
		<TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="137,10,0,0" Text="File Name" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Microsoft Sans Serif" FontSize="16" TextAlignment="Center" Width="85"/>
		<TextBox x:Name="textBox" HorizontalAlignment="Center" Margin="0,42,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="315" Height="22" TextChanged="OnTextChanged"/>
		<Button Content="Create" HorizontalAlignment="Left" Margin="137,69,0,0" VerticalAlignment="Top" Width="93" Click="OnCreate" Height="24"/>
	</Grid>
</Window>
